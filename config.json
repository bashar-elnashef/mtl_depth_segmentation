{
    "name": "MTL-Segmention-Depth-Normals",
    "n_gpu": 1,
    "data_loader": {
        "type": "NYUv2",
        "args":{
            "data_dir": "data/",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2
        }
    },
    "trainer": {
        "epochs": 1,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    },
    "data_downloader":{
        "type": "NYUV2Downloader",
        "args":{
            "download": true,
            "destination": "data/",
            "procesess": false,
            "exist_ok": true,
            "save_colored": false,
            "url":"https://drive.google.com/uc?/export=download&id=1U-xpq-ZmYTDc46dhDu3uUfAXLGdyYDmA"
        }
    }
}
